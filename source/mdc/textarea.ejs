<div class="mdc-text-field mdc-text-field--textarea mdc-theme--secondary" data-mdc-auto-init="MDCTextField">
  <textarea name="<%= name %>"<%= typeof required!==void(0)&&required?" required":"" %> rows="8" class="mdc-text-field__input"><%= typeof value===typeof void(0)?"":value %></textarea>
  <div class="mdc-notched-outline">
    <div class="mdc-notched-outline__leading"></div>
    <div class="mdc-notched-outline__notch">
      <label for="textarea" class="mdc-floating-label"><%= label %></label>
    </div>
    <div class="mdc-notched-outline__trailing"></div>
  </div>
</div>
