<!DOCTYPE html>
<html lang="zh-CN" dir="ltr">
  <head>
    <%- include("/partial/header",{title:"人大附中社团管理平台"}) %>
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
  </head>
  <body>
    <%- include("/partial/drawer",{user:user}) %>
    <%- include("/partial/appbar",{title:"人大附中社团管理平台"}) %>
    <div id="wrapper" class="mdc-top-app-bar--fixed-adjust">
      <div id="content-in">
        <div id="content">
          <div class="mdc-card">
            <div class="main-carousel" data-flickity='{ "autoPlay": true }'>
              <% require("./home").carousel.forEach(el => { %>
              <div class="carousel-cell"><a href="<%= el.link %>"><img src="<%= el.img %>" /></a></div>
              <% }); %>
            </div>
            <br />
            <h1>公告</h1>
            <div class="mdc-list" data-mdc-auto-init="MDCList">
              <% require("./home").links.forEach(el => { %>
                <a href="<%= el.link %>" class="mdc-list-item" data-mdc-auto-init="MDCRipple">
                  <%= el.title %>
                </a>
                <hr class="mdc-list-divider">
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("/partial/footer") %>
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
  </body>
</html>
