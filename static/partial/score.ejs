<% let isReport = typeof report !== typeof void(0);
let isApp = typeof application !== typeof void(0);
let isMessage = typeof message !== typeof void(0);
function score(size){
  switch(size){
    case "small":
    return 100;
    case "large":
    case "xlarge":
    case "outer":
    return 200;
    default:
    return 0;
  }
}
switch(user.role) {
  case "association":
  let score;
  if(isReport) {
    score = report.score;
  }
  if(isApp) {
    score = application.score;
  }
  if(isMessage) {
    score = message.score;
  } %>
  <%= score||"未打分" %>
  <%
  break;

  case "officer":
  case "admin":
  let value;
  if(isReport){
    value = report.score || score(report.checkedsize || report.size);
  }
  if(isApp) {
    value = application.score || 0;
  }
  if(isMessage) {
    value = message.score || 0;
  }
  %>
  <br />
  <%- include("../mdc/input",{label:"评分",name:"score",required:"true",value,type:"number"}) %>
  <% break;
} %>
